upstream keno_app_server {
# fail_timeout=0 means we always retry an upstream even if it failed
# to return a good HTTP response (in case the Unicorn master nukes a
# single worker for timing out).
server unix:/home/project/keno_promo/bin/gunicorn.sock fail_timeout=0;
}

map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}


server {
server_name admf12bet.mrkeno.com;
client_max_body_size 4G;
access_log /home/project/keno_promo/logs/nginx-access.log;
error_log /home/project/keno_promo/logs/nginx-error.log;
location /static/ {
alias   /home/project/keno_promo/static/;
}
location /media/ {
alias   /home/project/keno_promo/media/;
}
location /ws/ {
    #proxy_pass http://unix:/home/project/keno_promo/bin/gunicorn.sock;
    proxy_pass http://localhost:8000;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
}
location / {
# an HTTP header important enough to have its own Wikipedia entry:
#   http://en.wikipedia.org/wiki/X-Forwarded-For
proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
# enable this if and only if you use HTTPS, this helps Rack
# set the proper protocol for doing redirects:
proxy_set_header X-Forwarded-Proto https;
# pass the Host: header from the client right along so redirects
# can be set properly within the Rack application
proxy_set_header Host $http_host;
# we don't want nginx trying to do something clever with
# redirects, we set the Host: header above already.
proxy_redirect off;
# set "proxy_buffering off" *only* for Rainbows! when doing
# Comet/long-poll stuff.  It's also safe to set if you're
# using only serving fast clients with Unicorn + nginx.
# Otherwise you _want_ nginx to buffer responses to slow
# clients, really.
proxy_buffering off;
# Try to serve static files from nginx, no point in making an
# *application* server like Unicorn/Rainbows! serve static files.
if (!-f $request_filename) {
proxy_pass http://localhost:8000; 
#proxy_pass http://keno_app_server;
break;
}
}
# Error pages
error_page 500 502 503 504 /500.html;
location = /500.html {
root /home/project/keno_promo/static/;
}

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/admf12bet.mrkeno.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/admf12bet.mrkeno.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}



server {
    if ($host = admf12bet.mrkeno.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


listen   80;
server_name admf12bet.mrkeno.com;
    return 404; # managed by Certbot


}
