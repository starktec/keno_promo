#!/bin/bash
# Name of the application
NAME="keno_promo"
# Django project directory
DJANGODIR=/home/project/keno_promo
# we will communicte using this unix socket
SOCKFILE=/home/project/keno_promo/bin/gunicorn.sock
# how many worker processes should Gunicorn spawn
NUM_WORKERS=128
# which settings file should Django use
DJANGO_SETTINGS_MODULE=keno_promo.settings
# WSGI module name
#DJANGO_WSGI_MODULE=keno_promo.wsgi
DJANGO_ASGI_MODULE=keno_promo.asgi
# Gunicorn Log file
LOGFILE=/home/project/keno_promo/logs/gunicorn.log
echo "Starting $NAME as `whoami`"
# Activate the virtual environment
cd $DJANGODIR
source /home/project/keno_promo/env/bin/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DJANGODIR:$PYTHONPATH
# Create the run directory if it doesn't exist
RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR
# Start your Django Unicorn
# Programs meant to be run under supervisor should not daemonize themselves (do not use --daemon)
exec ddtrace-run gunicorn -k uvicorn.workers.UvicornWorker ${DJANGO_ASGI_MODULE}:application \
--name $NAME \
--workers $NUM_WORKERS \
#--bind=unix:$SOCKFILE \
--bind=0.0.0.0:8003 \
--log-level=debug \
--worker-connections=10240 \
#--threads=64 \
--max_requests=512 \
--log-file=$LOGFILE
